# Переменные окружения для Railway (бесплатный план)
NODE_ENV=production
PORT=3000

# База данных (Railway PostgreSQL - добавляется автоматически)
DATABASE_URL=${{ Postgres.DATABASE_URL }}

# Кеширование (Railway Redis - добавляется автоматически)
REDIS_URL=${{ Redis.REDIS_URL }}

# JWT токены (генерируйте уникальные)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-in-production

# Переводчик (бесплатно)
LIBRETRANSLATE_API_URL=https://libretranslate.de/translate

# Безопасность
CORS_ORIGIN=https://${{ RAILWAY_STATIC_URL }}

# Файлы
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

